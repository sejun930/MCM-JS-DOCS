{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "pages/*": ["./pages/*"],
      "pages/modules/*": ["./pages/modules/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    // "./src/**/*.ts",
    // "./src/**/*.tsx"
    "**/*.tsx",
    "**/*.ts",
    "src/main/mainComponents/modules/modal/functional/index.ts",
    "src/main/mainComponents/modules/modal/example/modal.example.render.data.tsx",
    "src/main/mainComponents/modules/tooltip/example/replace/tooltip.example.disable.templatetsx"
  ],
  "exclude": [
    "node_modules"
    // "**/*.spec.ts", "**/*.test.ts"
  ]
}
